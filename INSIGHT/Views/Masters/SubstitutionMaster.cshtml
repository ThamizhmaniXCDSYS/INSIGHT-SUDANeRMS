@{
    ViewBag.Title = "SubstitutionMaster";
    Layout = "~/Views/Shared/NewMaster.cshtml";
}

<style type="text/css">
.ui-jqgrid .ui-pg-input
{
    width:30px;
}
.ui-jqgrid .ui-pg-selbox
{
    width:50px;
   height:23px;
}
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#SubstitutionMaster').jqGrid({
            url: '@Url.Content("~/Masters/SubstitutionMasterJQGrid")',
            datatype: 'Json',
            type: 'GET',
            autowidth: true,
            height: 300,
            colNames: ['SubstitutionMstId', 'Period', 'PeriodYear', 'Sector', 'Name', 'ContType', 'Location', 'UNCode', 'ItemName', 'SubUNCode', 'SubCommodity', 'CreatedBy', 'CreatedDate', 'ModifiedBy', 'ModifiedDate'],
            colModel: [
            { name: 'SubstitutionMstId', index: 'SubstitutionMstId', hidden: true, key: true },
            { name: 'Period', index: 'Period', search:false,width:40,editable:true},
            { name: 'PeriodYear', index: 'PeriodYear', search: false, width: 40,editable:true },
            { name: 'Sector', index: 'Sector', search: false, width: 40,editable:true },
            { name: 'Name', index: 'Name', search: false, width: 40,editable:true },
            { name: 'ContingentType', index: 'ContingentType', search: false, width: 40,editable:true},
            { name: 'Location', index: 'Location', search: false, width: 40 },
            { name: 'UNCode', index: 'UNCode', search: false, width: 40 },
            { name: 'ItemName', index: 'ItemName',search:false },
            { name: 'SubstituteItemCode', index: 'SubstituteItemCode', search: false, width: 40 },
            { name: 'SubstituteItemName', index: 'SubstituteItemName',search:false },
            { name: 'CreatedBy', index: 'CreatedBy',search:false,hidden:true },
            { name: 'CreatedDate', index: 'CreatedDate',search:false,hidden:true},
            { name: 'ModifiedBy', index: 'ModifiedBy',hidden:true,Search:false },
            { name: 'ModifiedDate', index: 'ModifiedDate', hidden: true, Search: false },
            ],
            rowNum: 99999,
            rowList: [100,200,300,400], // disable page size dropdown
           
            sortname: 'SubstitutionMstId',
            sortorder: 'Asc',
            pager: '#SubstitutionMasterPager',
            multiselect: true,
            viewrecords: true,
            shrinktofit: true,
            caption: '&nbsp;<i class="icon-th-list"></i>&nbsp;Substitution Master List'
        });
        $('#SubstitutionMaster').jqGrid('filterToolbar', { searchOnEnter: true });
        jQuery("#SubstitutionMaster").jqGrid('navGrid', '#SubstitutionMasterPager', { add: true, edit: false, del: true, search: false, refresh: true },
        //Edit options
            {width: 'auto', url: '@Url.Content("~/Masters/EditItemMaster/")', left: '10%', top: '10%', height: '50%', width: 400 },
        //Add options
            {width: 'auto', url: '@Url.Content("~/Masters/AddItemMaster/")', left: '10%', top: '10%', height: '50%', width: 400 },
        //Delete options
            //{width: 'auto', url: '/Masters/DeleteItemMaster/', left: '10%', top: '10%', height: '50%', width: 400, beforeShowForm: function (params) { var gsr = $("#ItemMaster").getGridParam('selrow'); var sdata = $("#ItemMaster").getRowData(gsr); return { Id: sdata.Id} } 
            {width: 'auto', url: '@Url.Content("~/Masters/DeleteItemMaster/")', left: '10%', top: '10%', height: '50%', width: 400,
            beforeShowForm: function (params) { selectedrows = $("#SubstitutionMaster").jqGrid("getGridParam", "selarrrow"); return { Id: selectedrows } }
            });
    });
</script>
<table width="100%">
<tr>
<td>
<table id="SubstitutionMaster">
</table>
<div id="SubstitutionMasterPager">
</div>
</td>
</tr>
</table>

